{
  "homepage": "/pomodor/",
  "name": "pomodoro-app",
  "version": "0.1.0",
  "description": "A ReactJS and Redux Pomodoro timer clone based on the famous Pomofocus app",
  "private": false,
  "author": "Joshua Lehman",
  "license": "MIT",
  "demo": {
    "url": "https://joshlehman.ca/pomodor"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshl26/pomodoro-app.git"
  },
  "bugs": {
    "url": "https://github.com/joshl26/pomodoro-app/issues"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=17.0.0"
  },
  "packageManager": "npm@8.19.4",
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.1",
    "bootstrap": "^5.2.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-bootstrap": "^2.6.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^5.3.4",
    "react-timer-hook": "^3.0.7",
    "redux": "^4.2.0",
    "reselect": "^5.1.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "craco start",
    "start-windows": "set PORT=3051 && craco start",
    "build": "craco build",
    "test": "jest",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint": "npx eslint --fix \"src/**/*.{js,jsx}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-react": "^7.27.1",
    "@craco/craco": "^7.1.0",
    "@redux-devtools/core": "^3.13.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react-router-dom": "^5.3.3",
    "eslint": "^8.57.1",
    "eslint-config-react-app": "^7.0.1",
    "jest": "^27.5.1",
    "prettier": "^3.6.2",
    "react-scripts": "5.0.1",
    "redux-devtools-extension": "^2.13.9"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/src/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg|png|mp3|wav)$": "<rootDir>/src/__mocks__/fileMock.js",
      "^react$": "<rootDir>/node_modules/react",
      "^react-dom$": "<rootDir>/node_modules/react-dom",
      "^react-redux$": "<rootDir>/node_modules/react-redux"
    },
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/node_modules"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testEnvironment": "jsdom"
  },
  "overrides": {
    "whatwg-url": "^15.1.0",
    "tr46": "^5.1.1"
  }
}
