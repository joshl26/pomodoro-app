{
  "homepage": "/pomodor/",
  "name": "pomodoro-app",
  "version": "0.1.0",
  "description": "A ReactJS and Redux Pomodoro timer clone based on the famous Pomofocus app",
  "private": false,
  "author": "Joshua Lehman",
  "license": "MIT",
  "demo": {
    "url": "https://joshlehman.ca/pomodor"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshl26/pomodoro-app.git"
  },
  "bugs": {
    "url": "https://github.com/joshl26/pomodoro-app/issues"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=17.0.0"
  },
  "packageManager": "npm@8.19.4",
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.2",
    "bootstrap": "^5.3.8",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.6",
    "react-dev-utils": "^12.0.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.28.0",
    "redux": "^5.0.1",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "start": "craco start",
    "start-windows": "set PORT=3051 && craco start",
    "build": "craco build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint": "npx eslint --fix \"src/**/*.{js,jsx}\"",
    "lint:check": "npx eslint \"src/**/*.{js,jsx}\"",
    "analyze": "cross-env GENERATE_SOURCEMAP=true craco build && source-map-explorer 'build/static/js/*.js'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.27.1",
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/redux-mock-store": "^1.5.0",
    "eslint": "^8.57.1",
    "eslint-config-react-app": "^7.0.1",
    "jest": "^27.5.1",
    "prettier": "^3.6.2",
    "react-scripts": "5.0.1",
    "redux-mock-store": "^1.5.5",
    "source-map-explorer": "^2.5.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/src/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg|png|mp3|wav)$": "<rootDir>/src/__mocks__/fileMock.js",
      "^react$": "<rootDir>/node_modules/react",
      "^react-dom$": "<rootDir>/node_modules/react-dom",
      "^react-redux$": "<rootDir>/node_modules/react-redux"
    },
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/node_modules"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/__mocks__/**",
      "!src/index.jsx",
      "!src/reportWebVitals.js"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "overrides": {
    "whatwg-url": "^15.1.0",
    "tr46": "^5.1.1"
  }
}
